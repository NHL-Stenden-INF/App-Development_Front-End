<?xml version="1.0" encoding="utf-8"?>
<questions>
    <multiple_choice_question>
        <question_text>Which method is used to select an element by its ID?</question_text>
        <option correct="true">document.getElementById()</option>
        <option correct="false">document.getElement()</option>
        <option correct="false">document.selectById()</option>
        <option correct="false">document.findElement()</option>
    </multiple_choice_question>

    <multiple_choice_question>
        <question_text>How do you change the text content of an HTML element?</question_text>
        <option correct="true">element.textContent = "new text"</option>
        <option correct="false">element.text = "new text"</option>
        <option correct="false">element.content = "new text"</option>
        <option correct="false">element.setText("new text")</option>
    </multiple_choice_question>

    <multiple_choice_question>
        <question_text>Which method adds an event listener to an element?</question_text>
        <option correct="true">addEventListener()</option>
        <option correct="false">attachEvent()</option>
        <option correct="false">addEvent()</option>
        <option correct="false">bindEvent()</option>
    </multiple_choice_question>

    <multiple_choice_question>
        <question_text>How do you create a new HTML element using JavaScript?</question_text>
        <option correct="true">document.createElement()</option>
        <option correct="false">document.newElement()</option>
        <option correct="false">document.addElement()</option>
        <option correct="false">document.makeElement()</option>
    </multiple_choice_question>
</questions> 