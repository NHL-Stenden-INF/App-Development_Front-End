<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/finishLine"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/finish_line" />

    <ImageView
        android:id="@+id/guineaHorse"
        android:layout_width="90dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:oneshot="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guinea_horse_animation" />

    <ImageView
        android:id="@+id/guineaHorseRed"
        android:layout_width="90dp"
        android:layout_height="132dp"
        android:layout_marginTop="16dp"
        android:oneshot="false"
        app:layout_constraintStart_toEndOf="@+id/guineaHorseYellow"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guinea_horse_red_animation" />

    <ImageView
        android:id="@+id/guineaHorseYellow"
        android:layout_width="90dp"
        android:layout_height="132dp"
        android:layout_marginTop="16dp"
        android:oneshot="false"
        app:layout_constraintStart_toEndOf="@+id/guineaHorseGreen"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guinea_horse_yellow_animation" />

    <ImageView
        android:id="@+id/guineaHorseGreen"
        android:layout_width="90dp"
        android:layout_height="132dp"
        android:layout_marginTop="16dp"
        android:oneshot="false"
        app:layout_constraintStart_toEndOf="@+id/guineaHorse"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guinea_horse_green_animation" />

</androidx.constraintlayout.widget.ConstraintLayout>