<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.nhlstenden.appdev.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_tasks"
        android:name="com.nhlstenden.appdev.TasksFragment"
        android:label="Courses"
        tools:layout="@layout/fragment_tasks">
        <action
            android:id="@+id/action_tasks_to_course_topics"
            app:destination="@id/nav_course_topics"
            app:popUpTo="@id/nav_tasks"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/nav_courses"
        android:name="com.nhlstenden.appdev.CoursesFragment"
        android:label="Courses"
        tools:layout="@layout/fragment_courses">
        <action
            android:id="@+id/action_courses_to_course_topics"
            app:destination="@id/nav_course_topics"
            app:popUpTo="@id/nav_courses"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/nav_course_topics"
        android:name="com.nhlstenden.appdev.CourseTopicsFragment"
        android:label="Course Topics"
        tools:layout="@layout/fragment_course_topics">
        <argument
            android:name="courseName"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_rewards"
        android:name="com.nhlstenden.appdev.RewardsFragment"
        android:label="Rewards"
        tools:layout="@layout/fragment_rewards" />

    <fragment
        android:id="@+id/nav_friends"
        android:name="com.nhlstenden.appdev.FriendsFragment"
        android:label="Friends"
        tools:layout="@layout/fragment_friends" />

    <fragment
        android:id="@+id/nav_progress"
        android:name="com.nhlstenden.appdev.ProgressFragment"
        android:label="Progress"
        tools:layout="@layout/fragment_progress" />

</navigation> 